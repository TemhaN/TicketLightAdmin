<Window x:Class="TicketLightAdmin.Pages.QRCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QR-код" WindowStartupLocation="CenterScreen"
        Height="400" Width="300" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="QRCodeImage" Stretch="Uniform" Width="200" Height="200" Margin="10"/>
            <TextBlock x:Name="UserNameText" FontSize="14" FontWeight="Bold" TextAlignment="Center"/>
            <TextBlock x:Name="UserEmailText" FontSize="12" TextAlignment="Center"/>
            <TextBlock x:Name="UserPhoneText" FontSize="12" TextAlignment="Center"/>
            <TextBlock x:Name="UserRoleText" FontSize="12" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
